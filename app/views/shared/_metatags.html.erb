<% if content_for?(:description) %>
  <meta name="description" content="<%= yield(:description) %>">
<% end %>

<!-- Facebook -->
<% if content_for?(:og_title) %>
  <meta property="og:title" content="<%= yield(:og_title) %>">
<% end %>
<% if content_for?(:og_description) %>
  <meta property="og:description" content="<%= yield(:og_description) %>">
<% end %>
<% if content_for?(:og_image) %>
  <meta property="og:image" content="<%= yield(:og_image) %>">
<% end %>

<!-- Twitter -->
<% if content_for?(:twitter_card) %>
  <meta name="twitter:card" content="<%= yield(:twitter_card) %>">
<% end %>
<% if content_for?(:twitter_site) %>
  <meta name="twitter:site" content="<%= yield(:twitter_site) %>">
<% end %>
<% if content_for?(:twitter_title) %>
  <meta name="twitter:title" content="<%= yield(:twitter_title) %>">
<% end %>
<% if content_for?(:twitter_description) %>
  <meta name="twitter:description" content="<%= yield(:twitter_description) %>">
<% end %>
<% if content_for?(:twitter_image) %>
  <meta name="twitter:image" content="<%= yield(:twitter_image) %>">
<% end %>
